@model IEnumerable<DashboardApplication.Models.Activity>

@{
    ViewBag.Title = "View Activities";
}

<h2>View Activities</h2>

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Action</th>
            <th>Timestamp</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model)
        {
            <tr>
                <td>@activity.User.Name</td>
                <td>@activity.Description</td>
                <td>@activity.CreatedAt</td>
            </tr>
        }
    </tbody>
</table>
