@model DashboardApplication.Models.User

@{
    ViewBag.Title = "Create User";
}

<!-- Create User Form Section -->
<div class="container mt-5">
    <h2 class="text-center mb-4">Create New User</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <!-- Name Field -->
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <!-- Email Field -->
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label" })
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <!-- Action Buttons (Create and Cancel) -->
        <div class="form-group text-center">
            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary btn-lg mr-2">Create User</button>

            <!-- Cancel Button -->
            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary btn-lg">Cancel</a>
        </div>
    }
</div>

<!-- Include Bootstrap JS (if not already included in the layout) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
